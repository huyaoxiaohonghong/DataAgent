{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DataAgent Client",
  "version": "0.1.0",
  "identifier": "com.dataagent.client",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DataAgent Client",
        "width": 1200,
        "height": 800,
        "center": true,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "DataAgent 客户端 - 同步管理端数据",
    "longDescription": "DataAgent Client 是一款桌面应用，用于从 DataAgent Manage 管理端同步配置和用户数据。"
  }
}
